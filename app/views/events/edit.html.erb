    <div class="title">
      <i class="icon-plus"></i>
      Edit <% @event.title %>
    </div>
  </div>
  <div class="box-content box-double-padding">
    <form class="form" style="margin-bottom: 0;">
      <fieldset>
        <div class="col-sm-4">
          <div class="box">
        </div>
        <div class="col-sm-7 col-sm-offset-1">
          <div class="form-group">
           <%= f.input :title, :input_html => { :class => "form-control" } %>  
          </div>
          <div class="form-group">
           <%= f.input :severity, collection: Event.severity, :input_html => { :class => "form-control" } %>  
            </p>
          </div>
          <div class="form-group">
         <%= f.input :description, :input_html => { :class => "form-control" } %> 
          </div>
          <div class="form-group">
         <%= f.input :location, :input_html => { :class => "form-control" } %> 
          </div>
          <div class="form-group">
         <%= f.input :latitude, :input_html => { :class => "form-control" } %> 
          </div>
          <div class="form-group">
         <%= f.input :longitude, :input_html => { :class => "form-control" } %> 
          </div>
          <div class="form-group">
         <%= f.input :date, :input_html => { :class => "form-control" } %> 
          </div>
          <div class="form-group">
         <%= f.input :start_time, :input_html => { :class => "form-control" } %> 
          </div>
          <div class="form-group">
         <%= f.input :end_time, :input_html => { :class => "form-control" } %> 
          </div>
          <div class="form-group">
           <%= f.button :submit, :input_html => { :class => "btn btn-primary btn-lg" } %>  
